#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ”’ Running pre-commit security checks..."

# Run security audit
echo "ğŸ“‹ Running npm audit..."
npm run security:audit || {
    echo "âŒ npm audit failed - vulnerabilities detected"
    echo "Run 'npm run security:audit-fix' to attempt automatic fixes"
    exit 1
}

# Check licenses
echo "ğŸ“œ Checking package licenses..."
npm run security:licenses || {
    echo "âŒ License check failed - problematic licenses detected"
    exit 1
}

# Run linting
echo "ğŸ” Running ESLint..."
npm run lint || {
    echo "âŒ Linting failed - run 'npm run lint:fix' to fix issues"
    exit 1
}

# Run type checking
echo "ğŸ”§ Running TypeScript type check..."
npm run type-check || {
    echo "âŒ Type checking failed"
    exit 1
}

# Run security-focused tests
echo "ğŸ§ª Running security tests..."
npm run test:security || {
    echo "âŒ Security tests failed"
    exit 1
}

echo "âœ… All pre-commit security checks passed!"